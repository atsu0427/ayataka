
<h3>新規投稿</h3>

<div class="container">
			    <div class="row">
          <%= form_for @tweet do |f| %>
                <div class="col-md-4">    
                        <div class="card" style="width: 30rem;">

  <div class="field">
    <%= f.label :body %>
    <%= f.radio_button :body, "晴" %>晴
    <%= f.radio_button :body, "雨" %>雨
    <%= f.radio_button :body, "曇" %>曇
    <br>

    <%= f.label :season %>
    <%= f.radio_button :season, "春" %>春
    <%= f.radio_button :season, "夏" %>夏
    <%= f.radio_button :season, "秋" %>秋
    <%= f.radio_button :season, "冬" %>冬
    <br>

    <%= f.label :feel %>
    <%= f.radio_button :feel, "モノトーン" %>モノトーン
    <%= f.radio_button :feel, "ビビット" %>ビビット
    
    <br>

    <div class="field1">
    <%= f.label :image %>
    <%= f.file_field :image %>
    </div>
   
  </div>
  
  <div class="submit">
  <%= f.submit "Tweetする" %>
<% end %>
<%= link_to "Tweet一覧に戻る", tweets_path %>

<%= stylesheet_link_tag 'new', :media => "all" %>


    
